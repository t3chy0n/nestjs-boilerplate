{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build api",
    "format": "prettier --write \\\\\\\"apps/api/src/**/*.ts\\\\\\\" \\\\\\\"test/**/*.ts\\\\\\\"",
    "start": "nest start api",
    "start:dev": "nest start api --watch",
    "start:debug": "NEST_DEBUG=true nest start api --debug --watch",
    "start:prod": "node dist/api/src/main",
    "db:reset": "yarn db:drop && yarn migrate && yarn db:seed",
    "db:seed:build": "nest build db",
    "db:seed": "yarn db:seed:build && node dist/db/main",
    "db:changes": "yarn typeorm schema:log",
    "db:drop": "yarn typeorm schema:drop",
    "migration:create": "yarn typeorm migration:create apps/db/migrations/new-migration",
    "migration:generate": "yarn typeorm migration:generate apps/db/migrations/new-migration",
    "migrate": "yarn typeorm migration:run",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d postgress-datasource.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "TS_NODE_FILES=true mocha src/**/*.spec.ts  --config .mocharc.json --ignore 'node_modules/**/*'",
    "test:cov": "nyc  --reporter=text mocha src/**/*.spec.ts  --config .mocharc.json --ignore 'node_modules/**/*'",
    "test:watch": "jest --watch",
    "test:debug": "node  --inspect-brk  -r tsconfig-paths/register node_modules/.bin/mocha -r ts-node/register   --require source-map-support/register --config .mocharc.json --ignore 'node_modules/**/*' src/**/*.spec.ts ",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:cov": "NODE_ENV=e2e jest --config jest-e2e.json --silent=false --coverage",
    "test:e2e:debug": "NODE_ENV=e2e node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config jest-e2e.json --silent=false --detectOpenHandles",
    "test:all:cov": "npm run test:cov && npm run test:e2e:cov && npm run coverage:merge",
    "coverage:merge": "npx istanbul-merge --out coverage.json ./coverage/coverage-final.json ./coverage-e2e/coverage-final.json && npx istanbul report --include coverage.json --dir coverage-all html"
  },
  "dependencies": {
    "@golevelup/nestjs-common": "^1.4.4",
    "@golevelup/nestjs-discovery": "^3.0.0",
    "@nanogiants/nestjs-swagger-api-exception-decorator": "^1.6.1",
    "@nestjs/axios": "^0.0.8",
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/serve-static": "^3.0.1",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.1",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/exporter-jaeger": "^1.11.0",
    "@opentelemetry/instrumentation": "^0.37.0",
    "@opentelemetry/instrumentation-amqplib": "^0.32.2",
    "@opentelemetry/instrumentation-express": "^0.32.1",
    "@opentelemetry/instrumentation-http": "^0.37.0",
    "@opentelemetry/resources": "^1.11.0",
    "@opentelemetry/sdk-trace-node": "^1.11.0",
    "@opentelemetry/semantic-conventions": "^1.11.0",
    "@types/amqplib": "^0.8.2",
    "@types/sinon-chai": "^3.2.9",
    "amqplib": "^0.10.0",
    "apache-flink-statefun": "^3.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "json-ptr": "^3.1.1",
    "kafkajs": "^2.1.0",
    "lodash": "^4.17.21",
    "openapi-to-postmanv2": "^3.2.1",
    "opentelemetry-instrumentation-kafkajs": "^0.35.0",
    "opentelemetry-plugin-kafkajs": "^0.2.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sinon-chai": "^3.7.0",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@nestjs/cli": "^9.1.9",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.13",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.7",
    "chai-json": "^1.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.7.1",
    "sinon": "^15.0.3",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "testcontainers": "^8.11.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/apps/api/src/$1",
      "@db/(.*)": "<rootDir>/apps/db/$1",
      "@libs/(.*)": "<rootDir>/apps/libs/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".interface.(t|j)s",
      ".spec.(t|j)s",
      ".e2e-spec.(t|j)s",
      ".entity.(t|j)s",
      ".dto.(t|j)s"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ],
    "setupFiles": [
      "./jest-setup-file.ts"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "exclude": [
      "src/**/*.spec.[tj]s?(x)"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  }
}
